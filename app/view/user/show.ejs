<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Subscriber Show</title>
</head>

<body>
    <h1>User Data for <%= user.fullName %></h1>
    <table class="table">
        <tr>
            <th>Name</th>
            <td><%= user.fullName %></td>
        </tr>
        <tr>
            <th>Email</th>
            <td><%= user.email %></td>
        </tr>
        <tr>
            <th>Zip Code</th>
            <td><%= user.zipCode %></td>
        </tr>
        <tr>
            <th>Password</th>
            <td><%= user.password %></td>
        </tr>
    </table>
    <% if (user.subscriberAccount) { %>
        <h4 class="center"> This user has a
            <a href="<%= `/sub/${user.subscriberAccount}` %>">
                subscribed account
            </a>
        </h4>
        <% } %>
        <dif>
            <a href="/user/index">View all users</a>
        </dif>
        <dif>
            <a href="<%= `/user/${user._id}/edit` %>">Edit User Details</a>
        </dif>
        <form method="POST" action="<%= `/user/${user._id}/delete?_method=DELETE` %>">
            <button type="submit">Delete</button>
        </form>
